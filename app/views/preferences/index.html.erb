<div>
  <h1>Preferences</h1>

  <%= form_with model: current_user, url: preferences_path, method: :put, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, 'Your name:' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email_frequency, 'Email frequency:' %>
      <%= f.select :email_frequency, [['Daily', :daily], ['Weekly', :weekly], ['Monthly', :monthly], ['Never', :never]],
                   {}, { class: 'form-control' } %>
    </div>

    <div class="actions">
      <%= f.submit 'Submit' %>
    </div>
  <% end %>
</div>
